{
    "nrWindows": 1,
    "initialOps":
        [
            { "operation": "createPlainWindow", "target": "workspace/0", "title": "新闻" },
            { "operation": "load", "target": "plainwindow/0", "content": "shownews.html" },
            { "operation": "displace", "target": "dom/0", "element": "id/theIntro", "content": "shownews-intro.frag" },
            { "operation": "displace", "target": "dom/0", "element": "handle/A0", "content": "shownews-news.frag" },
            { "operation": "erase", "target": "dom/0", "element": "handle/A1", "property": "attr.disabled" }
        ],
    "namedOps":
        {
            "closeWindow": { "operation": "destroyPlainWindow", "target": "workspace/0", "element": "plainwindow/0" }
        },
   "events":
       [
            { "eventName": "close", "target": "plainwindow/0", "namedOp": "func:quit" },
            { "eventName": "click", "target": "dom/0", "element": "handle/A2", "namedOp": "closeWindow" }
       ]
}

