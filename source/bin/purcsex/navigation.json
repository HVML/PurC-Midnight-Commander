{
    "initialOps":
        [
            { "operation": "setPageGroups", "target": "workspace/0", "content": "assets/layout.html" },
            { "operation": "addPageGroups", "target": "workspace/0", "content": "assets/modal-group.frag" },
            { "operation": "createPlainWindow", "target": "workspace/0", "name": "splash", "title": "欢迎", "resultKey": "splash" },
            { "operation": "load", "target": "plainwindow/splash", "content": "assets/splash.html", "resultKey": "splash" },
            { "operation": "removePageGroup", "target": "workspace/0", "element": "id/modals" }
        ],
    "namedOps":
        {
            "closeSplash": { "operation": "destroyPlainWindow", "target": "workspace/0", "element": "plainwindow/splash" },
            "createMainWindow": [
                { "operation": "addPageGroups", "target": "workspace/0", "content": "assets/page-groups.frag" },
                { "operation": "createPage", "target": "workspace/0", "element": "id/mainBody", "name": "nav", "resultKey": "nav" },
                { "operation": "load", "target": "page/nav", "content": "assets/nav.html", "resultKey": "nav" },
                { "operation": "createPage", "target": "workspace/0", "element": "id/mainBody", "name": "content", "resultKey": "content" },
                { "operation": "load", "target": "page/content", "content": "assets/about-hvml.html", "resultKey": "content" }
            ],
            "loadContentHVML": { "operation": "load", "target": "page/content", "content": "assets/about-hvml.html", "resultKey": "content" },
            "loadContentPurC": { "operation": "load", "target": "page/content", "content": "assets/about-purc.html", "resultKey": "content" },
            "loadContentXGUIPro": { "operation": "load", "target": "page/content", "content": "assets/about-xguipro.html", "resultKey": "content" }

        },
   "events":
       [
            { "eventName": "click",  "target": "dom/splash", "element": "id/close", "namedOp": "closeSplash" },
            { "eventName": "close",  "target": "workspace/0", "element": "handle/plainwindow:splash","namedOp": "createMainWindow" },
            { "eventName": "create", "target": "workspace/0", "namedOp": "func:main_window_created", "resultKey": "mainWindow" },
            { "eventName": "click", "target": "dom/nav", "element": "id/theLinkeToHVML", "namedOp": "loadContentHVML" },
            { "eventName": "click", "target": "dom/nav", "element": "id/theLinkeToPurC", "namedOp": "loadContentPurC" },
            { "eventName": "click", "target": "dom/nav", "element": "id/theLinkeToXGUIPro", "namedOp": "loadContentXGUIPro" },
            { "eventName": "close", "target": "workspace/0", "element": "handle/tabbedwindow:mainWindow", "namedOp": "func:quit" }
       ]
}

